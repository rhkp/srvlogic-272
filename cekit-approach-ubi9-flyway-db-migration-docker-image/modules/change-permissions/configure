mkdir /home/default
cd /home/default
wget https://download.red-gate.com/maven/release/com/redgate/flyway/flyway-commandline/10.15.1/flyway-commandline-10.15.1-linux-x64.tar.gz
mkdir ./flyway
tar -zcvf flyway-commandline-10.15.1-linux-x64.tar.gz ./flyway

mkdir ./db-migration-files
git clone https://github.com/rhkp/srvlogic-272.git
cp ./srvlogic-272/cekit-approach-ubi9-flyway-db-migration-docker-image/db-migration-files ./db-migration-files

#  echo "-----------------------------------------------------------------"
 ls -al /home/default
#  echo "-----------------------------------------------------------------"
#  ls -al /home
#  echo "-----------------------------------------------------------------"
#  ls -al /home/default
#  echo "-----------------------------------------------------------------"
#find /home
chmod +x /home/default/migration.sh && chgrp -R 0 /home/default && chmod -R g=u /home/default